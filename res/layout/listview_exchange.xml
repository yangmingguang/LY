<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_card_bg"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/exchange_image_width"
        android:layout_height="@dimen/exchange_image_height"
        android:layout_centerVertical="true"
        android:background="@drawable/banner_detail_default"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_logo"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF8847"
            android:textSize="@dimen/exchange_title_text" />

        <TextView
            android:id="@+id/tv_marketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#787878"
            android:textSize="@dimen/exchange_subtitle_text" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#787878"
            android:textSize="@dimen/exchange_subtitle_text" />

        <TextView
            android:id="@+id/tv_selled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#787878"
            android:textSize="@dimen/exchange_subtitle_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_exchange"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_invite"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/white"
        android:textSize="@dimen/exchange_subtitle_text" />

</RelativeLayout>