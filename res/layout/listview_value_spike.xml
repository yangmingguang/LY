<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_card_bg"
    android:gravity="center_vertical"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/exchange_image_width"
        android:layout_height="@dimen/exchange_image_height"
        android:background="@drawable/banner_detail_default"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="dsfsdsdc"
            android:textColor="#383838"
            android:textSize="@dimen/exchange_title_text" />

        <TextView
            android:id="@+id/tv_marketPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="dsfsd"
            android:textColor="#787878"
            android:textSize="@dimen/exchange_subtitle_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="dsfsdsdc"
                android:textColor="#FF0000"
                android:textSize="@dimen/exchange_title_text" />

            <TextView
                android:id="@+id/btn_state"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_btn_invite"
                android:gravity="center"
                android:text="未开始"
                android:textColor="@color/white"
                android:textSize="@dimen/exchange_subtitle_text" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>