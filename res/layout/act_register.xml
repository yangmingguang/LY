<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_drawable"
    android:orientation="vertical"
    android:padding="20dp" >

    <EditText
        android:id="@+id/et_phone_num"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/et_top_bg"
        android:drawableLeft="@drawable/icon_account"
        android:hint="@string/username_hint"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="16sp"
        android:windowSoftInputMode="stateHidden" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/et_bottom_bg"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_validate_code"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/icon_lock"
            android:hint="@string/validate_code_hint"
            android:singleLine="true"
            android:textSize="16sp"
            android:windowSoftInputMode="stateHidden" />

        <TextView
            android:id="@+id/btn_validate_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/selector_red_btn"
            android:gravity="center"
            android:text="@string/validate_code_text"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_red_btn"
        android:gravity="center"
        android:text="@string/reg_btn_next_text"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

</LinearLayout>